# LG-Protect Environment Configuration

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# DynamoDB Configuration (leave empty for AWS DynamoDB)
DYNAMODB_ENDPOINT=

# Redis Configuration
REDIS_URL=redis://localhost:6379

# API Gateway Configuration
API_GATEWAY_HOST=0.0.0.0
API_GATEWAY_PORT=8000
API_GATEWAY_DEBUG=true

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000

# Development Settings
ENVIRONMENT=development
LOG_LEVEL=INFO

# Security (generate secure values for production)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=24

# Database TTL Settings (in seconds)
SCAN_RESULTS_TTL=2592000    # 30 days
INVENTORY_TTL=7776000       # 90 days  
COMPLIANCE_TTL=31536000     # 1 year
EVENTS_TTL=604800           # 7 days
ALERTS_TTL=2592000          # 30 days
