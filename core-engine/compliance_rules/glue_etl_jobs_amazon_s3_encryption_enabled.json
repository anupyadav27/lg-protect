{
  "Compliance Name": "iso27001_2022_aws",
  "ID": "A.8.24",
  "Name": "S3 Encryption for ETL Jobs",
  "Description": "Ensure Glue ETL jobs use Amazon S3 buckets with encryption enabled.",
  "Function Name": "glue_etl_jobs_amazon_s3_encryption_enabled",
  "clients": ["glue", "s3"],
  "functions": {
    "glue": {
      "method": "get_jobs",
      "field_path": "Jobs[].Name"
    },
    "s3": {
      "method": "get_bucket_encryption",
      "field_path": "ServerSideEncryptionConfiguration.Rules[].ApplyServerSideEncryptionByDefault.SSEAlgorithm"
    }
  },
  "evaluation": {
    "type": "exists",
    "source_client": "s3",
    "field": "SSEAlgorithm"
  }
}
