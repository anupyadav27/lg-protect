{
  "Compliance Name": "iso27001_2022_aws",
  "ID": "A.8.15",
  "Name": "Ingress from Internet to High-Risk TCP Ports",
  "Description": "Ensure security groups do not allow ingress from the internet to high-risk TCP ports to prevent unauthorized access.",
  "Function Name": "ec2_securitygroup_allow_ingress_from_internet_to_high_risk_tcp_ports",
  "clients": ["ec2"],
  "functions": {
    "ec2": {
      "method": "describe_security_groups",
      "field_path": "SecurityGroups[].IpPermissions[].FromPort"
    }
  },
  "evaluation": {
    "type": "value_check",
    "source_client": "ec2",
    "field": "FromPort",
    "condition": "not_allow_high_risk_tcp_ports"
  }
}
