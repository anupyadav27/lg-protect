{
  "Compliance Name": "aws_foundational_security_best_practices_aws",
  "ID": "EMR.2",
  "Name": "Amazon EMR block public access setting should be enabled",
  "Description": "This control checks whether Amazon EMR block public access is enabled.",
  "Function Name": "emr_cluster_publicly_accesible",
  "clients": ["emr"],
  "functions": {
    "emr": {
      "method": "describe_cluster",
      "field_path": "Cluster.Ec2InstanceAttributes.EmrManagedMasterSecurityGroup"
    }
  },
  "evaluation": {
    "type": "exists",
    "source_client": "emr",
    "field": "EmrManagedMasterSecurityGroup"
  }
}
