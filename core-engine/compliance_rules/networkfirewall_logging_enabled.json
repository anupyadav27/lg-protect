{
  "Compliance Name": "aws_foundational_security_best_practices_aws",
  "ID": "NetworkFirewall.2",
  "Name": "Network Firewall logging should be enabled",
  "Description": "This control checks whether AWS Network Firewall logging is enabled.",
  "Function Name": "networkfirewall_logging_enabled",
  "clients": ["network-firewall"],
  "functions": {
    "network-firewall": {
      "method": "describe_logging_configuration",
      "field_path": "LoggingConfiguration.LogDestinationConfigs[]"
    }
  },
  "evaluation": {
    "type": "exists",
    "source_client": "network-firewall",
    "field": "LogDestinationConfigs"
  }
}
