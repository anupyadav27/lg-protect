{
  "Compliance Name": "aws_foundational_security_best_practices_aws",
  "ID": "Lightsail.2",
  "Name": "Lightsail instances should have automated snapshots enabled",
  "Description": "This control checks whether Amazon Lightsail instances have automated snapshots enabled.",
  "Function Name": "lightsail_instance_automated_snapshots",
  "clients": ["lightsail"],
  "functions": {
    "lightsail": {
      "method": "get_instance_snapshots",
      "field_path": "instanceSnapshots[].fromInstanceName"
    }
  },
  "evaluation": {
    "type": "exists",
    "source_client": "lightsail",
    "field": "fromInstanceName"
  }
}
