{
  "Compliance Name": "cis_4.0_aws",
  "ID": "2.3.1",
  "Name": "EFS Encryption at Rest Enabled",
  "Description": "Ensure that encryption is enabled for EFS file systems",
  "Function Name": "efs_encryption_at_rest_enabled",
  "clients": ["efs"],
  "functions": {
    "efs": {
      "method": "describe_file_systems",
      "field_path": "FileSystems[].Encrypted"
    }
  },
  "evaluation": {
    "type": "equals",
    "source_client": "efs",
    "field": "Encrypted",
    "expected_value": true
  }
}
