{
  "Compliance Name": "iso27001_2022_aws",
  "ID": "A.8.14",
  "Name": "Multiple Origin Failover",
  "Description": "Ensure multiple origin failover is configured for CloudFront distributions.",
  "Function Name": "cloudfront_distributions_multiple_origin_failover_configured",
  "clients": ["cloudfront"],
  "functions": {
    "cloudfront": {
      "method": "get_distribution_config",
      "field_path": "DistributionConfig.Origins.Items[].FailoverCriteria"
    }
  },
  "evaluation": {
    "type": "exists",
    "source_client": "cloudfront",
    "field": "FailoverCriteria"
  }
}
