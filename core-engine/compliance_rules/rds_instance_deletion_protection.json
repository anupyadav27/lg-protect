{
  "Compliance Name": "aws_foundational_security_best_practices_aws",
  "ID": "RDS.7",
  "Name": "RDS clusters should have deletion protection enabled",
  "Description": "This control checks whether RDS clusters have deletion protection enabled.",
  "Function Name": "rds_instance_deletion_protection",
  "clients": ["rds"],
  "functions": {
    "rds": {
      "method": "describe_db_instances",
      "field_path": "DBInstances[].DeletionProtection"
    }
  },
  "evaluation": {
    "type": "exists",
    "source_client": "rds",
    "field": "DeletionProtection",
    "value": true
  }
}
