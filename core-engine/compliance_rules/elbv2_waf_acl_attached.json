{
  "Compliance Name": "iso27001_2022_aws",
  "ID": "A.8.15",
  "Name": "ELBv2 WAF ACL Attached",
  "Description": "Ensure ELBv2 has a WAF ACL attached to protect against web exploits.",
  "Function Name": "elbv2_waf_acl_attached",
  "clients": ["elbv2", "waf"],
  "functions": {
    "elbv2": {
      "method": "describe_load_balancers",
      "field_path": "LoadBalancers[].WafAclId"
    },
    "waf": {
      "method": "list_web_acls",
      "field_path": "WebAcls[].Id"
    }
  },
  "evaluation": {
    "type": "subset",
    "source_client": "elbv2",
    "target_client": "waf",
    "field": "WafAclId"
  }
}
