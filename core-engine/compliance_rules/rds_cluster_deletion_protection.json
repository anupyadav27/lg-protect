{
  "Compliance Name": "aws_foundational_security_best_practices_aws",
  "ID": "RDS.8",
  "Name": "RDS DB instances should have deletion protection enabled",
  "Description": "This control checks whether RDS DB instances have deletion protection enabled.",
  "Function Name": "rds_cluster_deletion_protection",
  "clients": ["rds"],
  "functions": {
    "rds": {
      "method": "describe_db_clusters",
      "field_path": "DBClusters[].DeletionProtection"
    }
  },
  "evaluation": {
    "type": "exists",
    "source_client": "rds",
    "field": "DeletionProtection",
    "value": true
  }
}
