{
  "Compliance Name": "cis_4.0_aws",
  "ID": "5.1.2",
  "Name": "EC2 CIFS Port Not Exposed to Internet",
  "Description": "Ensure CIFS access is restricted to trusted networks to prevent unauthorized access",
  "Function Name": "ec2_instance_port_cifs_exposed_to_internet",
  "clients": ["ec2"],
  "functions": {
    "ec2": {
      "method": "describe_security_groups",
      "field_path": "SecurityGroups[].IpPermissions[].FromPort"
    }
  },
  "evaluation": {
    "type": "not_equals",
    "source_client": "ec2",
    "field": "FromPort",
    "forbidden_values": [445, 139]
  }
}
