{
  "Compliance Name": "iso27001_2022_aws",
  "ID": "A.8.15",
  "Name": "Logging",
  "Description": "Logs that record activities, exceptions, faults and other relevant events should be produced, stored, protected and analysed.",
  "Function Name": "datasync_task_logging_enabled",
  "clients": ["datasync", "cloudwatch"],
  "functions": {
    "datasync": {
      "method": "describe_task",
      "field_path": "Task[].LoggingConfiguration.LogGroup"
    },
    "cloudwatch": {
      "method": "describe_log_groups",
      "field_path": "logGroups[].logGroupName"
    }
  },
  "evaluation": {
    "type": "subset",
    "source_client": "datasync",
    "target_client": "cloudwatch",
    "field": "LogGroup"
  }
}
