{
  "Compliance Name": "iso27001_2022_aws",
  "ID": "A.8.15",
  "Name": "Ingress from Internet to MongoDB Ports",
  "Description": "Ensure security groups do not allow ingress from the internet to MongoDB ports (27017, 27018) to prevent unauthorized access.",
  "Function Name": "ec2_securitygroup_allow_ingress_from_internet_to_port_mongodb_27017_27018",
  "clients": ["ec2"],
  "functions": {
    "ec2": {
      "method": "describe_security_groups",
      "field_path": "SecurityGroups[].IpPermissions[].FromPort"
    }
  },
  "evaluation": {
    "type": "value_check",
    "source_client": "ec2",
    "field": "FromPort",
    "expected_values": ["27017", "27018"],
    "condition": "not_exposed_to_internet"
  }
}
