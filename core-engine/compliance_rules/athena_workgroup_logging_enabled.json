{
  "Compliance Name": "iso27001_2022_aws",
  "ID": "A.8.15",
  "Name": "Logging",
  "Description": "Ensure logging is enabled for Athena workgroups.",
  "Function Name": "athena_workgroup_logging_enabled",
  "clients": ["athena"],
  "functions": {
    "athena": {
      "method": "list_work_groups",
      "field_path": "WorkGroups[].Name"
    },
    "athena": {
      "method": "get_work_group",
      "field_path": "WorkGroup.Configuration.ResultConfiguration.OutputLocation"
    }
  },
  "evaluation": {
    "type": "exists",
    "source_client": "athena",
    "field": "OutputLocation"
  }
}
