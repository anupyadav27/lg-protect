{
  "Compliance Name": "aws_foundational_security_best_practices_aws",
  "ID": "ServiceCatalog.1",
  "Name": "Service Catalog portfolios should be shared within the organization only",
  "Description": "This control checks whether AWS Service Catalog portfolios are shared only within the organization.",
  "Function Name": "servicecatalog_portfolio_shared_within_organization_only",
  "clients": ["servicecatalog"],
  "functions": {
    "servicecatalog": {
      "method": "describe_portfolio_shares",
      "field_path": "PortfolioShares[].Type"
    }
  },
  "evaluation": {
    "type": "exists",
    "source_client": "servicecatalog",
    "field": "Type",
    "value": "ORGANIZATION"
  }
}
