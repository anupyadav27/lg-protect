{
  "Compliance Name": "aws_foundational_security_best_practices_aws",
  "ID": "Lightsail.1",
  "Name": "Lightsail databases should not be publicly accessible",
  "Description": "This control checks whether Amazon Lightsail databases are publicly accessible.",
  "Function Name": "lightsail_database_public",
  "clients": ["lightsail"],
  "functions": {
    "lightsail": {
      "method": "get_relational_databases",
      "field_path": "relationalDatabases[].publiclyAccessible"
    }
  },
  "evaluation": {
    "type": "not_exists",
    "source_client": "lightsail",
    "field": "publiclyAccessible",
    "value": true
  }
}
