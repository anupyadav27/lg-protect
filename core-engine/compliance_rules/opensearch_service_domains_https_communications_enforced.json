{
  "Compliance Name": "pci_3.2.1_aws",
  "ID": "4.1.a",
  "Name": "Secure Communications",
  "Description": "Ensure OpenSearch service domains enforce HTTPS communications.",
  "Function Name": "opensearch_service_domains_https_communications_enforced",
  "clients": ["opensearch"],
  "functions": {
    "opensearch": {
      "method": "describe_domain",
      "field_path": "DomainStatus.EndpointOptions.EnforceHTTPS"
    }
  },
  "evaluation": {
    "type": "exists",
    "source_client": "opensearch",
    "field": "EnforceHTTPS"
  }
}
