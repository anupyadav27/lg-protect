{
  "Compliance Name": "iso27001_2022_aws",
  "ID": "A.8.27",
  "Name": "Secure Systems Architecture",
  "Description": "Ensure SSM documents do not contain secrets.",
  "Function Name": "ssm_document_secrets",
  "clients": ["ssm"],
  "functions": {
    "ssm": {
      "method": "list_documents",
      "field_path": "DocumentIdentifiers[].Name"
    },
    "ssm": {
      "method": "get_document",
      "field_path": "Document.Content"
    }
  },
  "evaluation": {
    "type": "not exists",
    "source_client": "ssm",
    "field": "Content"
  }
}
