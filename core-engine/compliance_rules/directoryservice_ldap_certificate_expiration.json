{
  "Compliance Name": "iso27001_2022_aws",
  "ID": "A.8.15",
  "Name": "LDAP Certificate Expiration",
  "Description": "Ensure LDAP certificates are renewed before expiration to maintain secure communication.",
  "Function Name": "directoryservice_ldap_certificate_expiration",
  "clients": ["directoryservice"],
  "functions": {
    "directoryservice": {
      "method": "describe_certificates",
      "field_path": "Certificates[].ExpirationDate"
    }
  },
  "evaluation": {
    "type": "date_check",
    "source_client": "directoryservice",
    "field": "ExpirationDate",
    "threshold": "30 days"
  }
}
