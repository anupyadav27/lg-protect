{
  "Compliance Name": "aws_foundational_security_best_practices_aws",
  "ID": "MQ.2",
  "Name": "MQ brokers should not be publicly accessible",
  "Description": "This control checks whether Amazon MQ brokers are publicly accessible.",
  "Function Name": "mq_broker_active_deployment_mode",
  "clients": ["mq"],
  "functions": {
    "mq": {
      "method": "describe_broker",
      "field_path": "DeploymentMode"
    }
  },
  "evaluation": {
    "type": "exists",
    "source_client": "mq",
    "field": "DeploymentMode",
    "value": "ACTIVE_STANDBY_MULTI_AZ"
  }
}
