{
  "Compliance Name": "cis_4.0_aws",
  "ID": "1.6",
  "Name": "IAM Root Hardware MFA Enabled",
  "Description": "Ensure hardware MFA is enabled for the 'root' user account",
  "Function Name": "iam_root_hardware_mfa_enabled",
  "clients": ["iam"],
  "functions": {
    "iam": {
      "method": "list_mfa_devices",
      "field_path": "MFADevices[].SerialNumber"
    }
  },
  "evaluation": {
    "type": "exists",
    "source_client": "iam",
    "field": "SerialNumber"
  }
}
