{
  "Compliance Name": "iso27001_2022_aws",
  "ID": "A.8.15",
  "Name": "Cross-Account Access for DynamoDB Table",
  "Description": "Ensure DynamoDB tables do not allow cross-account access to prevent unauthorized data sharing.",
  "Function Name": "dynamodb_table_cross_account_access",
  "clients": ["dynamodb"],
  "functions": {
    "dynamodb": {
      "method": "describe_table",
      "field_path": "Table[].CrossAccountAccess"
    }
  },
  "evaluation": {
    "type": "value_check",
    "source_client": "dynamodb",
    "field": "CrossAccountAccess",
    "expected_value": false
  }
}
