{
  "Compliance Name": "cis_4.0_aws",
  "ID": "2.2.2",
  "Name": "RDS Instance Minor Version Upgrade Enabled",
  "Description": "Ensure the Auto Minor Version Upgrade feature is enabled for RDS instances",
  "Function Name": "rds_instance_minor_version_upgrade_enabled",
  "clients": ["rds"],
  "functions": {
    "rds": {
      "method": "describe_db_instances",
      "field_path": "DBInstances[].AutoMinorVersionUpgrade"
    }
  },
  "evaluation": {
    "type": "exists",
    "source_client": "rds",
    "field": "AutoMinorVersionUpgrade",
    "value": true
  }
}
