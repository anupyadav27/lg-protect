  "Function Name": "networkfirewall_policy_rule_group_associated",
  "clients": ["network-firewall"],
  "functions": {
    "network-firewall": {
      "method": "describe_firewall_policy",
      "field_path": "FirewallPolicy.StatelessRuleGroupReferences[]"
    }
  },
  "evaluation": {
    "type": "exists",
    "source_client": "network-firewall",
    "field": "StatelessRuleGroupReferences"
  }
}
