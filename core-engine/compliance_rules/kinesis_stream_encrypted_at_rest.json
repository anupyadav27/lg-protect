{
  "Compliance Name": "aws_foundational_security_best_practices_aws",
  "ID": "Kinesis.1",
  "Name": "Kinesis Data Streams should be encrypted at rest",
  "Description": "This control checks whether Kinesis Data Streams are encrypted at rest with server-side encryption.",
  "Function Name": "kinesis_stream_encrypted_at_rest",
  "clients": ["kinesis"],
  "functions": {
    "kinesis": {
      "method": "describe_stream",
      "field_path": "StreamDescription.EncryptionType"
    }
  },
  "evaluation": {
    "type": "exists",
    "source_client": "kinesis",
    "field": "EncryptionType",
    "value": "KMS"
  }
}
