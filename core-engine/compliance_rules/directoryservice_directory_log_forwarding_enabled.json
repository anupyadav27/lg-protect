{
  "Compliance Name": "iso27001_2022_aws",
  "ID": "A.8.15",
  "Name": "Log Forwarding Enabled for Directory Service",
  "Description": "Ensure log forwarding is enabled for Directory Service to centralize monitoring and analysis.",
  "Function Name": "directoryservice_directory_log_forwarding_enabled",
  "clients": ["directoryservice", "cloudwatch"],
  "functions": {
    "directoryservice": {
      "method": "describe_directories",
      "field_path": "Directories[].LogForwardingConfiguration.LogGroup"
    },
    "cloudwatch": {
      "method": "describe_log_groups",
      "field_path": "logGroups[].logGroupName"
    }
  },
  "evaluation": {
    "type": "subset",
    "source_client": "directoryservice",
    "target_client": "cloudwatch",
    "field": "LogGroup"
  }
}
