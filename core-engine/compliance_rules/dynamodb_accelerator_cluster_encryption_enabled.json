{
  "Compliance Name": "iso27001_2022_aws",
  "ID": "A.8.15",
  "Name": "Encryption Enabled for DynamoDB Accelerator Cluster",
  "Description": "Ensure encryption is enabled for DynamoDB Accelerator (DAX) clusters to secure data at rest.",
  "Function Name": "dynamodb_accelerator_cluster_encryption_enabled",
  "clients": ["dynamodb"],
  "functions": {
    "dynamodb": {
      "method": "describe_clusters",
      "field_path": "Clusters[].EncryptionEnabled"
    }
  },
  "evaluation": {
    "type": "value_check",
    "source_client": "dynamodb",
    "field": "EncryptionEnabled",
    "expected_value": true
  }
}
