{
  "Compliance Name": "iso27001_2022_aws",
  "ID": "A.8.15",
  "Name": "Logging",
  "Description": "Ensure model invocation logging is enabled for Bedrock models.",
  "Function Name": "bedrock_model_invocation_logging_enabled",
  "clients": ["bedrock"],
  "functions": {
    "bedrock": {
      "method": "get_model_invocation_logging_configuration",
      "field_path": "LoggingConfiguration.Enabled"
    }
  },
  "evaluation": {
    "type": "exists",
    "source_client": "bedrock",
    "field": "Enabled"
  }
}
