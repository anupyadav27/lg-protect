{
  "Compliance Name": "pci_4.0_aws",
  "ID": "8.2.8.2",
  "Name": "IMDSv2 Requirement",
  "Description": "Check whether IMDSv2 is required for Auto Scaling group launch configurations.",
  "Function Name": "autoscaling_group_launch_configuration_requires_imdsv2",
  "clients": ["autoscaling"],
  "functions": {
    "autoscaling": {
      "method": "describe_auto_scaling_groups",
      "field_path": "AutoScalingGroups[].LaunchConfigurationName"
    },
    "autoscaling": {
      "method": "describe_launch_configurations",
      "field_path": "LaunchConfigurations[].MetadataOptions.HttpTokens"
    }
  },
  "evaluation": {
    "type": "equal",
    "source_client": "autoscaling",
    "field": "HttpTokens",
    "value": "required"
  }
}
