{
  "Compliance Name": "iso27001_2022_aws",
  "ID": "A.8.24",
  "Name": "Use of Cryptography",
  "Description": "Ensure model invocation logs are encrypted for Bedrock models.",
  "Function Name": "bedrock_model_invocation_logs_encryption_enabled",
  "clients": ["bedrock"],
  "functions": {
    "bedrock": {
      "method": "get_model_invocation_logging_configuration",
      "field_path": "LoggingConfiguration.EncryptionEnabled"
    }
  },
  "evaluation": {
    "type": "exists",
    "source_client": "bedrock",
    "field": "EncryptionEnabled"
  }
}
