{
  "Compliance Name": "iso27001_2022_aws",
  "ID": "A.8.14",
  "Name": "ELB Is in Multiple Availability Zones",
  "Description": "Information processing facilities should be implemented with redundancy sufficient to meet availability",
  "Function Name": "elb_is_in_multiple_az",
  "clients": ["elb"],
  "functions": {
    "elb": {
      "method": "describe_load_balancers",
      "field_path": "LoadBalancerDescriptions[].AvailabilityZones"
    }
  },
  "evaluation": {
    "type": "greater_than",
    "source_client": "elb",
    "field": "AvailabilityZones",
    "min_value": 1
  }
}
