{
  "Compliance Name": "aws_foundational_security_best_practices_aws",
  "ID": "Shield.2",
  "Name": "Shield Advanced should be enabled for Elastic IP addresses",
  "Description": "This control checks whether AWS Shield Advanced is enabled for Elastic IP addresses.",
  "Function Name": "shield_advanced_protection_in_associated_elastic_ips",
  "clients": ["shield"],
  "functions": {
    "shield": {
      "method": "list_protections",
      "field_path": "Protections[].ResourceArn"
    }
  },
  "evaluation": {
    "type": "exists",
    "source_client": "shield",
    "field": "ResourceArn"
  }
}
