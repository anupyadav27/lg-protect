{
  "Compliance Name": "iso27001_2022_aws",
  "ID": "A.8.15",
  "Name": "Public Snapshot for DocumentDB Cluster",
  "Description": "Ensure DocumentDB cluster snapshots are not publicly accessible to prevent unauthorized access.",
  "Function Name": "documentdb_cluster_public_snapshot",
  "clients": ["documentdb"],
  "functions": {
    "documentdb": {
      "method": "describe_db_cluster_snapshots",
      "field_path": "DBClusterSnapshots[].PubliclyAccessible"
    }
  },
  "evaluation": {
    "type": "value_check",
    "source_client": "documentdb",
    "field": "PubliclyAccessible",
    "expected_value": false
  }
}
