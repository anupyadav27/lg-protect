{
  "Compliance Name": "pci_4.0_aws",
  "ID": "A3.5.1.5",
  "Name": "cloudwatch",
  "Description": "Checks whether CloudWatch alarms with the given metric name have the specified settings",
  "Function Name": "cloudwatch_alarm_actions_alarm_state_configured",
  "clients": ["cloudwatch"],
  "functions": {
    "cloudwatch": {
      "method": "describe_alarms",
      "field_path": "MetricAlarms[].AlarmName"
    }
  },
  "evaluation": {
    "type": "exists",
    "source_client": "cloudwatch",
    "field": "AlarmName"
  }
}
