{
  "Compliance Name": "iso27001_2022_aws",
  "ID": "A.8.1",
  "Name": "SQS Queues Not Publicly Accessible",
  "Description": "Information stored on, processed by or accessible via user endpoint devices should be protected.",
  "Function Name": "sqs_queues_not_publicly_accessible",
  "clients": ["sqs"],
  "functions": {
    "sqs": {
      "method": "get_queue_attributes",
      "field_path": "Attributes.Policy"
    }
  },
  "evaluation": {
    "type": "not_contains",
    "source_client": "sqs",
    "field": "Policy",
    "forbidden_value": "*"
  }
}
