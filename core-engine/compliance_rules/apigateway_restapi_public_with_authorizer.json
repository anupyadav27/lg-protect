{
  "Compliance Name": "kisa_isms_p_2023_korean_aws",
  "ID": "2.10.3",
  "Name": "API Gateway Public Access with Authorizer",
  "Description": "Ensure public servers exposed to external networks have strengthened access control and authentication measures.",
  "Function Name": "apigateway_restapi_public_with_authorizer",
  "clients": ["apigateway"],
  "functions": {
    "apigateway": {
      "method": "get_rest_apis",
      "field_path": "items[].id"
    },
    "apigateway": {
      "method": "get_resources",
      "field_path": "item[].path"
    },
    "apigateway": {
      "method": "get_method",
      "field_path": "item[].authorizationType"
    }
  },
  "evaluation": {
    "type": "exists",
    "source_client": "apigateway",
    "field": "authorizationType"
  }
}
