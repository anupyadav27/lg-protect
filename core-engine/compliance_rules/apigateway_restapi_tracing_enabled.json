{
  "Compliance Name": "pci_4.0_aws",
  "ID": "A3.5.1.1",
  "Name": "API Gateway Tracing Enabled",
  "Description": "Ensure AWS X-Ray tracing is enabled on Amazon API Gateway REST APIs to monitor and trace requests.",
  "Function Name": "apigateway_restapi_tracing_enabled",
  "clients": ["apigateway"],
  "functions": {
    "apigateway": {
      "method": "get_rest_apis",
      "field_path": "items[].id"
    },
    "apigateway": {
      "method": "get_stages",
      "field_path": "item[].tracingEnabled"
    }
  },
  "evaluation": {
    "type": "exists",
    "source_client": "apigateway",
    "field": "tracingEnabled"
  }
}
