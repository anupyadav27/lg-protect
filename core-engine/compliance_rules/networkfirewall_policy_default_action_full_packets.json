{
  "Compliance Name": "pci_4.0_aws",
  "ID": "1.4.3.2",
  "Name": "networkfirewall",
  "Description": "Checks if an AWS Network Firewall policy is configured with a user defined default stateless action for full packets",
  "Function Name": "networkfirewall_policy_default_action_full_packets",
  "clients": ["networkfirewall"],
  "functions": {
    "networkfirewall": {
      "method": "describe_firewall_policy",
      "field_path": "FirewallPolicyResponse.FirewallPolicy.StatelessDefaultActions"
    }
  },
  "evaluation": {
    "type": "not_exists",
    "source_client": "networkfirewall",
    "target_client": "networkfirewall",
    "field": "StatelessDefaultActions",
    "expected_values": ["aws:drop", "aws:forward_to_sfe"],
    "validation": "contains_user_defined_action"
  }
}
