{
  "Compliance Name": "iso27001_2022_aws",
  "ID": "A.5.15",
  "Name": "Access Control",
  "Description": "Rules to control physical and logical access to information and other associated assets should be established",
  "Function Name": "iam_password_policy_expires_passwords_within_90_days_or_less",
  "clients": ["iam"],
  "functions": {
    "iam": {
      "method": "get_account_password_policy",
      "field_path": "PasswordPolicy.MaxPasswordAge"
    }
  },
  "evaluation": {
    "type": "exists",
    "source_client": "iam",
    "field": "MaxPasswordAge",
    "value": 90
  }
}
