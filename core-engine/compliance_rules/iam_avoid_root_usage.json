{
  "Compliance Name": "cis_4.0_aws",
  "ID": "1.5",
  "Name": "IAM Avoid Root Usage",
  "Description": "Ensure no root access key exists",
  "Function Name": "iam_avoid_root_usage",
  "clients": ["iam"],
  "functions": {
    "iam": {
      "method": "get_account_summary",
      "field_path": "SummaryMap.AccountAccessKeysPresent"
    }
  },
  "evaluation": {
    "type": "exists",
    "source_client": "iam",
    "field": "AccountAccessKeysPresent",
    "value": 0
  }
}
