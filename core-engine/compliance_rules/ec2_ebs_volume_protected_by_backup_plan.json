{
  "Compliance Name": "aws_foundational_security_best_practices_aws",
  "ID": "EC2.10",
  "Name": "Amazon EC2 should be configured to use VPC endpoints that are created for the Amazon EC2 service",
  "Description": "This control checks whether a service endpoint for Amazon EC2 is created for each VPC.",
  "Function Name": "ec2_ebs_volume_protected_by_backup_plan",
  "clients": ["ec2", "backup"],
  "functions": {
    "ec2_volumes": {
      "method": "describe_volumes",
      "field_path": "Volumes[].VolumeId"
    },
    "backup_plans": {
      "method": "list_backup_plans",
      "field_path": "BackupPlansList[].BackupPlanId"
    }
  },
  "evaluation": {
    "type": "subset",
    "source_client": "ec2_volumes",
    "target_client": "backup_plans",
    "field": "VolumeId"
  }
}
