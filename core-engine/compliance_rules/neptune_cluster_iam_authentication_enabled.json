{
  "Compliance Name": "aws_foundational_security_best_practices_aws",
  "ID": "Neptune.1",
  "Name": "Neptune DB clusters should have IAM database authentication enabled",
  "Description": "This control checks whether a Neptune DB cluster has IAM database authentication enabled.",
  "Function Name": "neptune_cluster_iam_authentication_enabled",
  "clients": ["neptune"],
  "functions": {
    "neptune": {
      "method": "describe_db_clusters",
      "field_path": "DBClusters[].IAMDatabaseAuthenticationEnabled"
    }
  },
  "evaluation": {
    "type": "exists",
    "source_client": "neptune",
    "field": "IAMDatabaseAuthenticationEnabled",
    "value": true
  }
}
