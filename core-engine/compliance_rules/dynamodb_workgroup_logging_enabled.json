{
  "Compliance Name": "iso27001_2022_aws",
  "ID": "A.8.15",
  "Name": "Logging Enabled for DynamoDB Workgroup",
  "Description": "Ensure logging is enabled for DynamoDB workgroups to monitor activities and events.",
  "Function Name": "dynamodb_workgroup_logging_enabled",
  "clients": ["dynamodb", "cloudwatch"],
  "functions": {
    "dynamodb": {
      "method": "describe_workgroups",
      "field_path": "Workgroups[].LoggingConfiguration.LogGroup"
    },
    "cloudwatch": {
      "method": "describe_log_groups",
      "field_path": "logGroups[].logGroupName"
    }
  },
  "evaluation": {
    "type": "subset",
    "source_client": "dynamodb",
    "target_client": "cloudwatch",
    "field": "LogGroup"
  }
}