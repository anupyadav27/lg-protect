{
  "Compliance Name": "iso27001_2022_aws",
  "ID": "A.8.22",
  "Name": "EC2 Instance No Secrets in User Data",
  "Description": "Security mechanisms, service levels and service requirements of network services should be identified, implemented and monitored.",
  "Function Name": "ec2_instance_secrets_user_data",
  "clients": ["ec2"],
  "functions": {
    "ec2": {
      "method": "describe_instances",
      "field_path": "Reservations[].Instances[].UserData"
    }
  },
  "evaluation": {
    "type": "not_contains",
    "source_client": "ec2",
    "field": "UserData",
    "forbidden_values": ["password", "secret", "key", "token"]
  }
}
