{
  "Compliance Name": "aws_foundational_security_best_practices_aws",
  "ID": "Neptune.1",
  "Name": "Neptune DB clusters should have copy tags to snapshots enabled",
  "Description": "This control checks whether Neptune DB clusters have copy tags to snapshots enabled.",
  "Function Name": "neptune_cluster_copy_tags_to_snapshots",
  "clients": ["neptune"],
  "functions": {
    "neptune": {
      "method": "describe_db_clusters",
      "field_path": "DBClusters[].CopyTagsToSnapshot"
    }
  },
  "evaluation": {
    "type": "exists",
    "source_client": "neptune",
    "field": "CopyTagsToSnapshot",
    "value": true
  }
}
