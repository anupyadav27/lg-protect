{
  "Compliance Name": "iso27001_2022_aws",
  "ID": "A.5.29",
  "Name": "Information Security During Disruption",
  "Description": "The organisation should plan how to maintain information security at an appropriate level during disruption.",
  "Function Name": "guardduty_centrally_managed",
  "clients": ["guardduty", "organizations"],
  "functions": {
    "guardduty": {
      "method": "list_organization_admin_accounts",
      "field_path": "AdminAccounts[].AdminAccountId"
    },
    "organizations": {
      "method": "describe_organization",
      "field_path": "Organization.MasterAccountId"
    }
  },
  "evaluation": {
    "type": "not_exists",
    "source_client": "guardduty",
    "target_client": "organizations",
    "field": "AdminAccountId"
  }
}
