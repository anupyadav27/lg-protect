{
  "Compliance Name": "cis_4.0_aws",
  "ID": "4.4",
  "Name": "",
  "Description": "Ensure IAM policy changes are monitored",
  "Function Name": "cloudwatch_log_metric_filter_policy_changes",
  "clients": ["logs", "cloudwatch"],
  "functions": {
    "logs": {
      "method": "describe_log_groups",
      "field_path": "logGroups[].logGroupName"
    },
    "cloudwatch": {
      "method": "describe_metric_filters",
      "field_path": "metricFilters[].filterPattern"
    },
    "cloudwatch": {
      "method": "describe_alarms",
      "field_path": "MetricAlarms[].AlarmName"
    }
  },
  "evaluation": {
    "type": "exists",
    "source_client": "cloudwatch",
    "field": "AlarmName"
  }
}
