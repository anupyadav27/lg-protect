{
  "Compliance Name": "aws_foundational_security_best_practices_aws",
  "ID": "Redshift.2",
  "Name": "Connections to Redshift clusters should be encrypted in transit",
  "Description": "This control checks whether connections to Amazon Redshift clusters are required to use encryption in transit.",
  "Function Name": "redshift_cluster_in_transit_encryption_enabled",
  "clients": ["redshift"],
  "functions": {
    "redshift": {
      "method": "describe_clusters",
      "field_path": "Clusters[].ClusterParameterGroups[].ParameterApplyStatus"
    }
  },
  "evaluation": {
    "type": "exists",
    "source_client": "redshift",
    "field": "ParameterApplyStatus",
    "value": "in-sync"
  }
}
