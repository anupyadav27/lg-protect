{
  "Compliance Name": "pci_4.0_aws",
  "ID": "A1.2.1.5",
  "Name": "ELB Desync Mitigation Mode Configured",
  "Description": "Checks if Classic Load Balancers (CLB) are configured with a user defined Desync mitigation mode",
  "Function Name": "elb_desync_mitigation_mode",
  "clients": ["elb"],
  "functions": {
    "elb": {
      "method": "describe_load_balancer_attributes",
      "field_path": "LoadBalancerAttributes[].AttributeName"
    }
  },
  "evaluation": {
    "type": "in",
    "source_client": "elb",
    "field": "AttributeName",
    "allowed_values": ["routing.http.desync_mitigation_mode"]
  }
}
