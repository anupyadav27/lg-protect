{
  "Compliance Name": "pci_4.0_aws",
  "ID": "A3.4.1.24",
  "Name": "Unused Secrets",
  "Description": "Ensure AWS Secrets Manager secrets are accessed within a specified number of days.",
  "Function Name": "secretsmanager_secret_unused",
  "clients": ["secretsmanager"],
  "functions": {
    "secretsmanager": {
      "method": "list_secrets",
      "field_path": "SecretList[].LastAccessedDate"
    }
  },
  "evaluation": {
    "type": "exists",
    "source_client": "secretsmanager",
    "field": "LastAccessedDate"
  }
}
