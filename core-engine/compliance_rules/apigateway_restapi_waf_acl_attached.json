{
  "Compliance Name": "fedramp_low_revision_4_aws",
  "ID": "cm-2",
  "Name": "API Gateway WAF ACL Attached",
  "Description": "Ensure WAF ACL is attached to API Gateway REST APIs to maintain baseline configuration.",
  "Function Name": "apigateway_restapi_waf_acl_attached",
  "clients": ["apigateway", "wafv2"],
  "functions": {
    "apigateway": {
      "method": "get_rest_apis",
      "field_path": "items[].id"
    },
    "wafv2": {
      "method": "list_resources_for_web_acl",
      "field_path": "ResourceArns[]"
    }
  },
  "evaluation": {
    "type": "exists",
    "source_client": "wafv2",
    "field": "ResourceArns"
  }
}
