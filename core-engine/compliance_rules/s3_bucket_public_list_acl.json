{
  "Compliance Name": "aws_audit_manager_control_tower_guardrails_aws",
  "ID": "4.1.1",
  "Name": "Disallow public read access to S3 buckets",
  "Description": "Checks that your S3 buckets do not allow public read access.",
  "Function Name": "s3_bucket_public_list_acl",
  "clients": ["s3"],
  "functions": {
    "s3": {
      "method": "get_bucket_acl",
      "field_path": "Grants[].Permission"
    }
  },
  "evaluation": {
    "type": "not_exists",
    "source_client": "s3",
    "field": "Permission",
    "value": "READ"
  }
}
