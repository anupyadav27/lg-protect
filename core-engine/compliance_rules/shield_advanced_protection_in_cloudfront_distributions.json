{
  "Compliance Name": "aws_foundational_security_best_practices_aws",
  "ID": "Shield.1",
  "Name": "Shield Advanced should be enabled for CloudFront distributions",
  "Description": "This control checks whether AWS Shield Advanced is enabled for CloudFront distributions.",
  "Function Name": "shield_advanced_protection_in_cloudfront_distributions",
  "clients": ["shield"],
  "functions": {
    "shield": {
      "method": "list_protections",
      "field_path": "Protections[].ResourceArn"
    }
  },
  "evaluation": {
    "type": "exists",
    "source_client": "shield",
    "field": "ResourceArn"
  }
}
