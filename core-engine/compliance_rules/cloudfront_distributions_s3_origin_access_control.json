{
  "Compliance Name": "pci_4.0_aws",
  "ID": "10.3.4.2",
  "Name": "S3 Origin Access Control",
  "Description": "Ensure S3 origin access control is enabled for CloudFront distributions.",
  "Function Name": "cloudfront_distributions_s3_origin_access_control",
  "clients": ["cloudfront", "s3"],
  "functions": {
    "cloudfront": {
      "method": "get_distribution_config",
      "field_path": "DistributionConfig.Origins.Items[].OriginAccessControl"
    },
    "s3": {
      "method": "head_bucket",
      "field_path": "BucketName"
    }
  },
  "evaluation": {
    "type": "exists",
    "source_client": "cloudfront",
    "field": "OriginAccessControl"
  }
}
