{
  "Compliance Name": "aws_foundational_security_best_practices_aws",
  "ID": "Redshift.7",
  "Name": "Redshift clusters should use enhanced VPC routing",
  "Description": "This control checks whether Amazon Redshift clusters have enhanced VPC routing enabled.",
  "Function Name": "redshift_cluster_automatic_upgrades",
  "clients": ["redshift"],
  "functions": {
    "redshift": {
      "method": "describe_clusters",
      "field_path": "Clusters[].AllowVersionUpgrade"
    }
  },
  "evaluation": {
    "type": "exists",
    "source_client": "redshift",
    "field": "AllowVersionUpgrade",
    "value": true
  }
}
