{
  "Compliance Name": "iso27001_2022_aws",
  "ID": "A.8.24",
  "Name": "ECS Task Definitions No Privileged Containers",
  "Description": "Ensure ECS task definitions do not use privileged containers to maintain security.",
  "Function Name": "ecs_task_definitions_no_privileged_containers",
  "clients": ["ecs"],
  "functions": {
    "ecs": {
      "method": "describe_task_definition",
      "field_path": "taskDefinition.containerDefinitions[].privileged"
    }
  },
  "evaluation": {
    "type": "value_check",
    "source_client": "ecs",
    "field": "privileged",
    "expected_value": false
  }
}
