{
  "Compliance Name": "aws_foundational_security_best_practices_aws",
  "ID": "DocumentDB.2",
  "Name": "DocumentDB clusters should be encrypted",
  "Description": "This control checks whether DocumentDB clusters have encryption enabled.",
  "Function Name": "documentdb_cluster_storage_encrypted",
  "clients": ["docdb"],
  "functions": {
    "docdb": {
      "method": "describe_db_clusters",
      "field_path": "DBClusters[].StorageEncrypted"
    }
  },
  "evaluation": {
    "type": "exists",
    "source_client": "docdb",
    "field": "StorageEncrypted",
    "value": true
  }
}
