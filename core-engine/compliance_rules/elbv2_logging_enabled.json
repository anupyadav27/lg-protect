{
  "Compliance Name": "iso27001_2022_aws",
  "ID": "A.8.15",
  "Name": "ELBv2 Logging Enabled",
  "Description": "Ensure ELBv2 logging is enabled to monitor activities and events.",
  "Function Name": "elbv2_logging_enabled",
  "clients": ["elbv2", "cloudwatch"],
  "functions": {
    "elbv2": {
      "method": "describe_load_balancers",
      "field_path": "LoadBalancers[].LoggingConfiguration.LogGroup"
    },
    "cloudwatch": {
      "method": "describe_log_groups",
      "field_path": "logGroups[].logGroupName"
    }
  },
  "evaluation": {
    "type": "subset",
    "source_client": "elbv2",
    "target_client": "cloudwatch",
    "field": "LogGroup"
  }
}
