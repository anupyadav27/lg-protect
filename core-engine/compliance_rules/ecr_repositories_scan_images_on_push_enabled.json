{
  "Compliance Name": "aws_foundational_security_best_practices_aws",
  "ID": "ECR.1",
  "Name": "ECR private repositories should have image scanning configured",
  "Description": "This control checks whether a private ECR repository has image scanning enabled.",
  "Function Name": "ecr_repositories_scan_images_on_push_enabled",
  "clients": ["ecr"],
  "functions": {
    "ecr": {
      "method": "describe_repositories",
      "field_path": "repositories[].imageScanningConfiguration.scanOnPush"
    }
  },
  "evaluation": {
    "type": "exists",
    "source_client": "ecr",
    "field": "scanOnPush",
    "value": true
  }
}
