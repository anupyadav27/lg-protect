{
  "Compliance Name": "aws_foundational_security_best_practices_aws",
  "ID": "EC2.7",
  "Name": "EBS default encryption should be enabled",
  "Description": "This control checks whether account-level encryption is enabled by default for Amazon Elastic Block Store (EBS).",
  "Function Name": "ec2_ebs_default_encryption",
  "clients": ["ec2"],
  "functions": {
    "ec2": {
      "method": "get_ebs_encryption_by_default",
      "field_path": "EbsEncryptionByDefault"
    }
  },
  "evaluation": {
    "type": "exists",
    "source_client": "ec2",
    "field": "EbsEncryptionByDefault",
    "value": true
  }
}
