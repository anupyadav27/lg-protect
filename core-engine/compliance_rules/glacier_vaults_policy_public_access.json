{
  "Compliance Name": "aws_foundational_security_best_practices_aws",
  "ID": "Glacier.1",
  "Name": "Glacier vaults should have access logging configured",
  "Description": "This control checks whether Amazon S3 Glacier vaults have access logging configured.",
  "Function Name": "glacier_vaults_policy_public_access",
  "clients": ["glacier"],
  "functions": {
    "glacier": {
      "method": "get_vault_access_policy",
      "field_path": "policy.Policy"
    }
  },
  "evaluation": {
    "type": "not_exists",
    "source_client": "glacier",
    "field": "Policy",
    "value": "*"
  }
}
