{
  "Compliance Name": "aws_foundational_security_best_practices_aws",
  "ID": "ECS.5",
  "Name": "ECS containers should not be privileged",
  "Description": "This control checks whether ECS containers are running in privileged mode.",
  "Function Name": "ecs_task_definitions_host_namespace_not_shared",
  "clients": ["ecs"],
  "functions": {
    "ecs": {
      "method": "describe_task_definition",
      "field_path": "taskDefinition.pidMode"
    }
  },
  "evaluation": {
    "type": "not_exists",
    "source_client": "ecs",
    "field": "pidMode",
    "value": "host"
  }
}
