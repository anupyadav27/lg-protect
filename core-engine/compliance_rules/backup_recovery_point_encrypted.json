{
  "Compliance Name": "iso27001_2022_aws",
  "ID": "A.8.24",
  "Name": "Use of Cryptography",
  "Description": "Ensure recovery points are encrypted.",
  "Function Name": "backup_recovery_point_encrypted",
  "clients": ["backup"],
  "functions": {
    "backup": {
      "method": "list_recovery_points_by_backup_vault",
      "field_path": "RecoveryPoints[].EncryptionKeyArn"
    }
  },
  "evaluation": {
    "type": "exists",
    "source_client": "backup",
    "field": "EncryptionKeyArn"
  }
}
