{
  "Compliance Name": "iso27001_2022_aws",
  "ID": "A.8.24",
  "Name": "KMS Encryption",
  "Description": "Ensure S3 buckets are encrypted using KMS keys.",
  "Function Name": "s3_bucket_kms_encryption",
  "clients": ["s3"],
  "functions": {
    "s3": {
      "method": "get_bucket_encryption",
      "field_path": "ServerSideEncryptionConfiguration.Rules[].ApplyServerSideEncryptionByDefault.KMSMasterKeyID"
    }
  },
  "evaluation": {
    "type": "exists",
    "source_client": "s3",
    "field": "KMSMasterKeyID"
  }
}
