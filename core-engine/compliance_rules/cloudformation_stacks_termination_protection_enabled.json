{
  "Compliance Name": "aws_well_architected_framework_reliability_pillar_aws",
  "ID": "REL09-BP03",
  "Name": "Termination Protection",
  "Description": "Ensure termination protection is enabled for CloudFormation stacks.",
  "Function Name": "cloudformation_stacks_termination_protection_enabled",
  "clients": ["cloudformation"],
  "functions": {
    "cloudformation": {
      "method": "describe_stacks",
      "field_path": "Stacks[].EnableTerminationProtection"
    }
  },
  "evaluation": {
    "type": "exists",
    "source_client": "cloudformation",
    "field": "EnableTerminationProtection"
  }
}
