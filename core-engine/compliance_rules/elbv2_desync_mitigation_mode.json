{
  "Compliance Name": "iso27001_2022_aws",
  "ID": "A.8.15",
  "Name": "ELBv2 Desync Mitigation Mode",
  "Description": "Ensure ELBv2 desync mitigation mode is enabled to prevent HTTP desync attacks.",
  "Function Name": "elbv2_desync_mitigation_mode",
  "clients": ["elbv2"],
  "functions": {
    "elbv2": {
      "method": "describe_load_balancers",
      "field_path": "LoadBalancers[].DesyncMitigationMode"
    }
  },
  "evaluation": {
    "type": "value_check",
    "source_client": "elbv2",
    "field": "DesyncMitigationMode",
    "expected_value": "enabled"
  }
}
