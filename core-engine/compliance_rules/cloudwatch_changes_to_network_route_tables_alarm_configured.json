{
  "Compliance Name": "cis_4.0_aws",
  "ID": "4.13",
  "Name": "Route Table Changes Monitoring",
  "Description": "Ensure route table changes are monitored using CloudWatch alarms and logs.",
  "Function Name": "cloudwatch_changes_to_network_route_tables_alarm_configured",
  "clients": ["logs", "cloudwatch"],
  "functions": {
    "logs": {
      "method": "describe_log_groups",
      "field_path": "logGroups[].logGroupName"
    },
    "cloudwatch": {
      "method": "describe_metric_filters",
      "field_path": "metricFilters[].filterPattern"
    },
    "cloudwatch": {
      "method": "describe_alarms",
      "field_path": "MetricAlarms[].AlarmName"
    }
  },
  "evaluation": {
    "type": "exists",
    "source_client": "cloudwatch",
    "field": "AlarmName"
  }
}
