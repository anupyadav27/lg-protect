{
  "Compliance Name": "aws_foundational_security_best_practices_aws",
  "ID": "EC2.15",
  "Name": "EC2 subnets should not automatically assign public IP addresses",
  "Description": "This control checks whether the assignment of public IP addresses in Amazon VPC subnets have MapPublicIpOnLaunch set to FALSE.",
  "Function Name": "ec2_launch_template_no_public_ip",
  "clients": ["ec2"],
  "functions": {
    "ec2": {
      "method": "describe_launch_templates",
      "field_path": "LaunchTemplates[].LaunchTemplateData.NetworkInterfaces[].AssociatePublicIpAddress"
    }
  },
  "evaluation": {
    "type": "not_exists",
    "source_client": "ec2",
    "field": "AssociatePublicIpAddress",
    "value": true
  }
}
