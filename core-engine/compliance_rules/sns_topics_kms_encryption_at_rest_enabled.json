{
  "Compliance Name": "aws_foundational_security_best_practices_aws",
  "ID": "SNS.1",
  "Name": "SNS topics should be encrypted at rest using AWS KMS",
  "Description": "This control checks whether a topic is encrypted with AWS KMS.",
  "Function Name": "sns_topics_kms_encryption_at_rest_enabled",
  "clients": ["sns"],
  "functions": {
    "sns": {
      "method": "get_topic_attributes",
      "field_path": "Attributes.KmsMasterKeyId"
    }
  },
  "evaluation": {
    "type": "exists",
    "source_client": "sns",
    "field": "KmsMasterKeyId"
  }
}
