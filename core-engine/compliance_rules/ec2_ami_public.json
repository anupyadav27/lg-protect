{
  "Compliance Name": "aws_foundational_security_best_practices_aws",
  "ID": "EC2.8",
  "Name": "EC2 instances should use IMDSv2",
  "Description": "This control checks whether your EC2 instances require the use of Instance Metadata Service Version 2 (IMDSv2).",
  "Function Name": "ec2_ami_public",
  "clients": ["ec2"],
  "functions": {
    "ec2": {
      "method": "describe_images",
      "field_path": "Images[].Public"
    }
  },
  "evaluation": {
    "type": "not_exists",
    "source_client": "ec2",
    "field": "Public",
    "value": true
  }
}
