{
  "Compliance Name": "aws_foundational_security_best_practices_aws",
  "ID": "CloudFront.12",
  "Name": "Non-Existent S3 Origin",
  "Description": "Ensure CloudFront distributions do not point to non-existent S3 origins.",
  "Function Name": "cloudfront_distributions_s3_origin_non_existent_bucket",
  "clients": ["cloudfront", "s3"],
  "functions": {
    "cloudfront": {
      "method": "get_distribution_config",
      "field_path": "DistributionConfig.Origins.Items[].DomainName"
    },
    "s3": {
      "method": "head_bucket",
      "field_path": "BucketName"
    }
  },
  "evaluation": {
    "type": "exists",
    "source_client": "s3",
    "field": "BucketName"
  }
}
