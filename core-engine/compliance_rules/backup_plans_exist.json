{
  "Compliance Name": "iso27001_2022_aws",
  "ID": "A.8.13",
  "Name": "Information Backup",
  "Description": "Ensure backup plans are created and maintained.",
  "Function Name": "backup_plans_exist",
  "clients": ["backup"],
  "functions": {
    "backup": {
      "method": "list_backup_plans",
      "field_path": "BackupPlans[].BackupPlanName"
    }
  },
  "evaluation": {
    "type": "exists",
    "source_client": "backup",
    "field": "BackupPlanName"
  }
}
