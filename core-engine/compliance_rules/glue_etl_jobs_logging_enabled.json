{
  "Compliance Name": "iso27001_2022_aws",
  "ID": "A.8.15",
  "Name": "Glue ETL Jobs Logging Enabled",
  "Description": "Logs that record activities, exceptions, faults and other relevant events should be produced, stored, protected and analysed.",
  "Function Name": "glue_etl_jobs_logging_enabled",
  "clients": ["glue"],
  "functions": {
    "glue": {
      "method": "get_job",
      "field_path": "Job.DefaultArguments.--enable-continuous-cloudwatch-log"
    }
  },
  "evaluation": {
    "type": "equals",
    "source_client": "glue",
    "field": "--enable-continuous-cloudwatch-log",
    "expected_value": "true"
  }
}
