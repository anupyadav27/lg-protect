{
  "Compliance Name": "iso27001_2022_aws",
  "ID": "A.8.16",
  "Name": "Monitoring Activities",
  "Description": "Networks, systems and applications should be monitored for anomalous behaviour and appropriate actions taken to evaluate potential information security incidents.",
  "Function Name": "cloudtrail_logs_s3_bucket_is_not_publicly_accessible",
  "clients": ["cloudtrail", "s3"],
  "functions": {
    "cloudtrail": {
      "method": "describe_trails",
      "field_path": "trailList[].S3BucketName"
    },
    "s3": {
      "method": "get_bucket_policy_status",
      "field_path": "PolicyStatus.IsPublic"
    }
  },
  "evaluation": {
    "type": "equal",
    "source_client": "s3",
    "field": "IsPublic",
    "value": false
  }
}
