{
  "Compliance Name": "aws_foundational_security_best_practices_aws",
  "ID": "RDS.27",
  "Name": "RDS DB clusters should be encrypted at rest",
  "Description": "This control checks whether storage encryption is enabled for your Amazon RDS DB clusters.",
  "Function Name": "rds_cluster_multi_az",
  "clients": ["rds"],
  "functions": {
    "rds": {
      "method": "describe_db_clusters",
      "field_path": "DBClusters[].MultiAZ"
    }
  },
  "evaluation": {
    "type": "exists",
    "source_client": "rds",
    "field": "MultiAZ",
    "value": true
  }
}
