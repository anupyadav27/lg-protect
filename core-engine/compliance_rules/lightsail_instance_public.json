{
  "Compliance Name": "aws_foundational_security_best_practices_aws",
  "ID": "Lightsail.1",
  "Name": "Lightsail instances should not have a public IP address",
  "Description": "This control checks whether Amazon Lightsail instances have a public IP address.",
  "Function Name": "lightsail_instance_public",
  "clients": ["lightsail"],
  "functions": {
    "lightsail": {
      "method": "get_instances",
      "field_path": "instances[].publicIpAddress"
    }
  },
  "evaluation": {
    "type": "not_exists",
    "source_client": "lightsail",
    "field": "publicIpAddress"
  }
}
