{
  "Compliance Name": "aws_foundational_security_best_practices_aws",
  "ID": "ECS.4",
  "Name": "ECS containers should run as non-privileged",
  "Description": "This control checks whether the privileged parameter in the container definition of ECS Task Definitions is set to true.",
  "Function Name": "ecs_task_definitions_logging_block_mode",
  "clients": ["ecs"],
  "functions": {
    "ecs": {
      "method": "describe_task_definition",
      "field_path": "taskDefinition.containerDefinitions[].logConfiguration.logDriver"
    }
  },
  "evaluation": {
    "type": "exists",
    "source_client": "ecs",
    "field": "logDriver",
    "value": "awslogs"
  }
}
