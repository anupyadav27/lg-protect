{
  "Compliance Name": "aws_foundational_security_best_practices_aws",
  "ID": "EC2.9",
  "Name": "EC2 instances should not have a public IP address",
  "Description": "This control checks whether EC2 instances have a public IP address.",
  "Function Name": "ec2_instance_public_ip",
  "clients": ["ec2"],
  "functions": {
    "ec2": {
      "method": "describe_instances",
      "field_path": "Reservations[].Instances[].PublicIpAddress"
    }
  },
  "evaluation": {
    "type": "not_exists",
    "source_client": "ec2",
    "field": "PublicIpAddress"
  }
}
