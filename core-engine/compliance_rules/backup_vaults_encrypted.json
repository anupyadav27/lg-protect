{
  "Compliance Name": "iso27001_2022_aws",
  "ID": "A.8.24",
  "Name": "Use of Cryptography",
  "Description": "Ensure backup vaults are encrypted.",
  "Function Name": "backup_vaults_encrypted",
  "clients": ["backup"],
  "functions": {
    "backup": {
      "method": "describe_backup_vault",
      "field_path": "BackupVaultName"
    }
  },
  "evaluation": {
    "type": "exists",
    "source_client": "backup",
    "field": "BackupVaultName"
  }
}
