{
  "Compliance Name": "aws_foundational_security_best_practices_aws",
  "ID": "S3.8",
  "Name": "S3 buckets should block public access",
  "Description": "This control checks whether Amazon S3 buckets have bucket-level public access blocks applied.",
  "Function Name": "s3_account_level_public_access_blocks",
  "clients": ["s3control"],
  "functions": {
    "s3control": {
      "method": "get_public_access_block",
      "field_path": "PublicAccessBlockConfiguration.BlockPublicAcls"
    }
  },
  "evaluation": {
    "type": "exists",
    "source_client": "s3control",
    "field": "BlockPublicAcls",
    "value": true
  }
}
