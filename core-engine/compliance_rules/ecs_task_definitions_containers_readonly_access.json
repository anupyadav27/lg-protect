{
  "Compliance Name": "pci_4.0_aws",
  "ID": "A3.4.1.5",
  "Name": "ECS Task Definitions Containers ReadOnly Access",
  "Description": "Checks if Amazon Elastic Container Service (Amazon ECS) Containers only have read-only access to its root filesystems",
  "Function Name": "ecs_task_definitions_containers_readonly_access",
  "clients": ["ecs"],
  "functions": {
    "ecs_task_definitions": {
      "method": "list_task_definitions",
      "field_path": "taskDefinitionArns[]"
    },
    "ecs_task_definition_details": {
      "method": "describe_task_definition",
      "field_path": "taskDefinition.containerDefinitions[].readonlyRootFilesystem"
    }
  },
  "evaluation": {
    "type": "exists",
    "source_client": "ecs",
    "field": "readonlyRootFilesystem",
    "value": true
  }
}
