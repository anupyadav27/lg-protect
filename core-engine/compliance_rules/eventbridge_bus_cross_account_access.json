{
  "Compliance Name": "iso27001_2022_aws",
  "ID": "A.8.15",
  "Name": "EventBridge Bus Cross-Account Access",
  "Description": "Ensure EventBridge buses do not allow cross-account access to prevent unauthorized data sharing.",
  "Function Name": "eventbridge_bus_cross_account_access",
  "clients": ["eventbridge"],
  "functions": {
    "eventbridge": {
      "method": "list_event_buses",
      "field_path": "EventBuses[].Policy"
    }
  },
  "evaluation": {
    "type": "value_check",
    "source_client": "eventbridge",
    "field": "Policy",
    "condition": "not_allow_cross_account_access"
  }
}
