{
  "Compliance Name": "iso27001_2022_aws",
  "ID": "A.8.22",
  "Name": "Segregation of Networks",
  "Description": "Security mechanisms, service levels and service requirements of network services should be identified, implemented and monitored.",
  "Function Name": "vpc_subnet_different_az",
  "clients": ["ec2"],
  "functions": {
    "ec2": {
      "method": "describe_subnets",
      "field_path": "Subnets[].AvailabilityZone"
    }
  },
  "evaluation": {
    "type": "find",
    "source_client": "ec2",
    "target_client": "ec2",
    "field": "AvailabilityZone",
    "validation": "multiple_availability_zones"
  }
}
