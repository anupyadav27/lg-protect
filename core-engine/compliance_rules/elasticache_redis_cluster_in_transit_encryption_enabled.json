{
  "Compliance Name": "aws_foundational_security_best_practices_aws",
  "ID": "ElastiCache.3",
  "Name": "ElastiCache for Redis clusters should have automatic backup enabled",
  "Description": "This control checks whether ElastiCache for Redis clusters have automatic backup enabled.",
  "Function Name": "elasticache_redis_cluster_in_transit_encryption_enabled",
  "clients": ["elasticache"],
  "functions": {
    "elasticache": {
      "method": "describe_cache_clusters",
      "field_path": "CacheClusters[].TransitEncryptionEnabled"
    }
  },
  "evaluation": {
    "type": "exists",
    "source_client": "elasticache",
    "field": "TransitEncryptionEnabled",
    "value": true
  }
}
