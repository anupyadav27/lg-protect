{
  "Compliance Name": "iso27001_2022_aws",
  "ID": "A.8.15",
  "Name": "Logging",
  "Description": "Logs that record activities, exceptions, faults and other relevant events should be produced, stored, protected and analysed.",
  "Function Name": "appsync_field_level_logging_enabled",
  "clients": ["appsync"],
  "functions": {
    "appsync": {
      "method": "list_graphql_apis",
      "field_path": "graphqlApis[].logConfig.fieldLogLevel"
    }
  },
  "evaluation": {
    "type": "exists",
    "source_client": "appsync",
    "field": "fieldLogLevel"
  }
}
