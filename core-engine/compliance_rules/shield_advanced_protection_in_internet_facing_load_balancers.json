{
  "Compliance Name": "ens_rd2022_aws",
  "ID": "mp.s.4.r1.aws.shieldadv.1",
  "Name": "Shield Advanced Protection for Internet Facing Load Balancers",
  "Description": "Detección y reacción",
  "Function Name": "shield_advanced_protection_in_internet_facing_load_balancers",
  "clients": ["elbv2", "shield"],
  "functions": {
    "elbv2": {
      "method": "describe_load_balancers",
      "field_path": "LoadBalancers[].LoadBalancerArn"
    },
    "shield": {
      "method": "list_protections",
      "field_path": "Protections[].ResourceArn"
    }
  },
  "evaluation": {
    "type": "subset",
    "source_client": "elbv2",
    "target_client": "shield",
    "field": "LoadBalancerArn"
  }
}
