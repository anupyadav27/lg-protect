{
  "Compliance Name": "cis_4.0_aws",
  "ID": "3.1",
  "Name": "",
  "Description": "Ensure CloudTrail is enabled in all regions",
  "Function Name": "cloudtrail_multi_region_enabled",
  "clients": ["cloudtrail"],
  "functions": {
    "cloudtrail": {
      "method": "describe_trails",
      "field_path": "trailList[].IsMultiRegionTrail"
    }
  },
  "evaluation": {
    "type": "equal",
    "source_client": "cloudtrail",
    "field": "IsMultiRegionTrail",
    "value": true
  }
}
