{
  "Compliance Name": "iso27001_2022_aws",
  "ID": "A.8.15",
  "Name": "Multi-AZ Enabled for DocumentDB Cluster",
  "Description": "Ensure Multi-AZ is enabled for DocumentDB clusters to enhance availability and fault tolerance.",
  "Function Name": "documentdb_cluster_multi_az_enabled",
  "clients": [
    "documentdb"
  ],
  "functions": {
    "documentdb": {
      "method": "describe_db_clusters",
      "field_path": "DBClusters[].MultiAZ"
    }
  },
  "evaluation": {
    "type": "value_check",
    "source_client": "documentdb",
    "field": "MultiAZ",
    "expected_value": true
  }
}
