{
  "Compliance Name": "aws_foundational_security_best_practices_aws",
  "ID": "TrustedAdvisor.1",
  "Name": "A support role should be created to manage incidents with AWS Support",
  "Description": "This control checks whether there are AWS Trusted Advisor findings for errors and warnings.",
  "Function Name": "trustedadvisor_errors_and_warnings",
  "clients": ["support"],
  "functions": {
    "support": {
      "method": "describe_trusted_advisor_checks",
      "field_path": "checks[].status"
    }
  },
  "evaluation": {
    "type": "not_exists",
    "source_client": "support",
    "field": "status",
    "value": "error"
  }
}
