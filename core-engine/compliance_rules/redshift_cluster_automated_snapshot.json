{
  "Compliance Name": "aws_foundational_security_best_practices_aws",
  "ID": "Redshift.4",
  "Name": "Amazon Redshift clusters should have automatic snapshots enabled",
  "Description": "This control checks whether Amazon Redshift clusters have automated snapshots enabled.",
  "Function Name": "redshift_cluster_automated_snapshot",
  "clients": ["redshift"],
  "functions": {
    "redshift": {
      "method": "describe_clusters",
      "field_path": "Clusters[].AutomatedSnapshotRetentionPeriod"
    }
  },
  "evaluation": {
    "type": "exists",
    "source_client": "redshift",
    "field": "AutomatedSnapshotRetentionPeriod"
  }
}
