{
  "Compliance Name": "iso27001_2022_aws",
  "ID": "A.8.13",
  "Name": "Information Backup",
  "Description": "Ensure backup vaults are created.",
  "Function Name": "backup_vaults_exist",
  "clients": ["backup"],
  "functions": {
    "backup": {
      "method": "list_backup_vaults",
      "field_path": "BackupVaultList[].BackupVaultName"
    }
  },
  "evaluation": {
    "type": "exists",
    "source_client": "backup",
    "field": "BackupVaultName"
  }
}
