{
  "Compliance Name": "cis_4.0_aws",
  "ID": "1.8",
  "Name": "Ensure IAM password policy requires at least one uppercase letter",
  "Description": "Password policies are used to enforce password complexity requirements.",
  "Function Name": "iam_password_policy_uppercase",
  "clients": ["iam"],
  "functions": {
    "iam": {
      "method": "get_account_password_policy",
      "field_path": "PasswordPolicy.RequireUppercaseCharacters"
    }
  },
  "evaluation": {
    "type": "exists",
    "source_client": "iam",
    "field": "RequireUppercaseCharacters",
    "value": true
  }
}
