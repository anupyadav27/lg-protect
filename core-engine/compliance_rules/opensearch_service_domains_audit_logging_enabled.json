{
  "Compliance Name": "iso27001_2022_aws",
  "ID": "A.8.15",
  "Name": "Logging",
  "Description": "Logs that record activities, exceptions, faults and other relevant events should be produced, stored, protected and analysed.",
  "Function Name": "opensearch_service_domains_audit_logging_enabled",
  "clients": ["opensearch"],
  "functions": {
    "opensearch": {
      "method": "describe_domain_config",
      "field_path": "DomainConfig.LogPublishingOptions.Value"
    }
  },
  "evaluation": {
    "type": "find",
    "source_client": "opensearch",
    "target_client": "opensearch",
    "field": "LogPublishingOptions",
    "required_log_types": ["AUDIT_LOGS"],
    "validation": "audit_logging_enabled"
  }
}
