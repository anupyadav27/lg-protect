{
  "Compliance Name": "iso27001_2022_aws",
  "ID": "A.8.22",
  "Name": "Paravirtual Instance Type",
  "Description": "Ensure EC2 instances are not using paravirtual virtualization type.",
  "Function Name": "ec2_instance_paravirtual_type",
  "clients": ["ec2"],
  "functions": {
    "ec2": {
      "method": "describe_instances",
      "field_path": "Reservations[].Instances[].VirtualizationType"
    }
  },
  "evaluation": {
    "type": "not exists",
    "source_client": "ec2",
    "field": "VirtualizationType"
  }
}
