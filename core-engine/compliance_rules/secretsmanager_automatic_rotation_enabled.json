{
  "Compliance Name": "aws_foundational_security_best_practices_aws",
  "ID": "SecretsManager.3",
  "Name": "Remove unused Secrets Manager secrets",
  "Description": "This control checks whether AWS Secrets Manager secrets have been accessed within a specified number of days.",
  "Function Name": "secretsmanager_automatic_rotation_enabled",
  "clients": ["secretsmanager"],
  "functions": {
    "secretsmanager": {
      "method": "describe_secret",
      "field_path": "RotationEnabled"
    }
  },
  "evaluation": {
    "type": "exists",
    "source_client": "secretsmanager",
    "field": "RotationEnabled",
    "value": true
  }
}
