{
  "Compliance Name": "pci_4.0_aws",
  "ID": "A3.4.1.6",
  "Name": "EFS Access Point Enforce Root Directory",
  "Description": "Checks if Amazon Elastic File System (Amazon EFS) access points are configured to enforce a root directory",
  "Function Name": "efs_access_point_enforce_root_directory",
  "clients": ["efs"],
  "functions": {
    "efs": {
      "method": "describe_access_points",
      "field_path": "AccessPoints[].RootDirectory.Path"
    }
  },
  "evaluation": {
    "type": "exists",
    "source_client": "efs",
    "field": "Path"
  }
}
