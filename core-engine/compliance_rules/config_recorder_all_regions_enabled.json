{
  "Compliance Name": "cis_4.0_aws",
  "ID": "3.3",
  "Name": "AWS Config Recorder",
  "Description": "Ensure AWS Config is enabled in all regions",
  "Function Name": "config_recorder_all_regions_enabled",
  "clients": ["config"],
  "functions": {
    "config": {
      "method": "describe_configuration_recorders",
      "field_path": "ConfigurationRecorders[].name"
    },
    "config": {
      "method": "describe_configuration_recorder_status",
      "field_path": "ConfigurationRecordersStatus[].recording"
    },
    "config": {
      "method": "describe_delivery_channels",
      "field_path": "DeliveryChannels[].name"
    }
  },
  "evaluation": {
    "type": "exists",
    "source_client": "config",
    "field": "recording"
  }
}
